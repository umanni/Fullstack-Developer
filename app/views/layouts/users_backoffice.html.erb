<!DOCTYPE html>
<html>
  <head>
    <title>TesteRubyOnRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">TesteRubyOnRails</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <% if current_user.admin == true %>
            <li class="nav-item">
              <%= link_to 'Dashboard', users_backoffice_admin_index_path, class: "nav-link" %>
            </li>
            <% end %>
            <li class="nav-item">
              <%= link_to 'Perfil', edit_user_registration_path, class: "nav-link" %>
            </li>
            <% if current_user.admin == true %>
            <li class="nav-item">
              <a class="nav-link" >Administrador</a>
            </li>
            <% end %>
          </ul>
          <div class="d-flex">
          </div>
        </div>
      </div>
    </nav>

    <div class="container-fliud">
      <%= yield %>
    </div>
  </body>
</html>
