<!DOCTYPE html>
<html>
  <head>
    <title>TesteRubyOnRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">TesteRubyOnRails</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
            <% if current_user.admin == true %>
              <%= link_to 'Perfil', users_backoffice_admin_show_path, class: "nav-link" %>
              <% else %>
              <%= link_to 'Perfil', users_backoffice_user_show_path, class: "nav-link" %>
              <% end %>
            </li>
            <% if current_user.admin == true %>
            <li class="nav-item">
              <%= link_to 'Dashboard', users_backoffice_admin_index_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Importar UsuÃ¡rios', users_backoffice_admin_import_users_path, class: "nav-link" %>
            </li>
            <% end %>
          </ul>
          <div class="d-flex">
            <div class="nav-item d-flex align-items-center justify-content-center">
                <a class="nav-link text-dark" >
                  <% if user_signed_in? %>
                    <%= current_user.full_name %>
                  <% end %>
                </a>
            </div>
              <div class="nav-item dropdown me-2">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <% if current_user.avatar_image.blank? %>
                    <%= image_tag("https://png.pngtree.com/png-vector/20190223/ourlarge/pngtree-profile-line-black-icon-png-image_691065.jpg", :alt => "Foto do Perfil", class:"rounded-circle", height:"50px", width: "50px" )%>
                <% else %>
                <%= image_tag(current_user.avatar_image, :alt => "Foto do Perfil", class:"rounded-circle", height:"50px", width: "50px" )%>
                  <% end %>
                </a>
                <ul class="dropdown-menu me-5" aria-labelledby="navbarDropdown">
                  <li><%= link_to 'Editar Perfil', edit_user_registration_path, class: "dropdown-item" %></li>
                  <li><%= link_to 'Logout', destroy_user_session_path, method: :delete, class:"dropdown-item text-danger" %></li>
                  <li><hr class="dropdown-divider"></li>
                  <li><%= link_to 'Apagar Conta', registration_path(current_user), data: { confirm: "Are you sure?" }, method: :delete, class:"dropdown-item text-danger" %></li>
                </ul>
              </div>
          </div>
        </div>
      </div>
    </nav>

    <div class="container-fliud">
      <%= yield %>
    </div>
  </body>
</html>
