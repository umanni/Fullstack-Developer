
<div class="container-lg mt-3 p-3 border border-radius rounded">
<% if user_signed_in? %>
  <div class="d-flex justify-content-center align-items-center position-relative">
    <% if current_user.avatar_image.blank? %>
        <%= image_tag("https://png.pngtree.com/png-vector/20190223/ourlarge/pngtree-profile-line-black-icon-png-image_691065.jpg", :alt => "Foto do Perfil", class:"img-thumbnail", height:"150px", width: "150px" )%>
    <% else %>
    <%= image_tag(current_user.avatar_image, :alt => "Foto do Perfil", class:"img-thumbnail", height:"150px", width: "150px" )%>
    <% end %>
    <div class="position-absolute top-0 end-0"><%= link_to 'Editar', edit_user_registration_path, class: "nav-link" %></div>
  </div>
    <% end %>

  <form class="mt-3">
    <div class="mb-3">
      <label for="inputName" class="form-label">Nome</label>
      <input type="text" class="form-control" id="inputName" value="<%= current_user.full_name %>" disabled >
    </div>
    <div class="mb-3">
      <label for="inputEmail" class="form-label">Email</label>
      <input type="email" class="form-control" id="inputEmail" aria-describedby="emailAdress" value="<%= current_user.email %>" disabled >
    </div>
  </form>
</div>