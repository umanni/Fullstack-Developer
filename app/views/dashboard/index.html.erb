<%= turbo_frame_tag "dashboard_main" do %>
  <section>
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100">Dashboard</h1>
  </div>
    <% if user_signed_in? %>
      <div class="mb-6">
        <p class="text-cyan-800 dark:text-yellow-100">
          <p class="text-xl">Hello, <%= current_user.full_name %>.</p>
          <p class="text-sm">(Logged as <%= current_user.role.capitalize %>)</p>
          <%# Create button to redirect to the dashboard %>
        </p>
      </div>
    <% else %>
      <%= link_to "Login", new_user_session_path, data: { turbo_frame: 'dashboard_main' } %>
    <% end %>
    <%= render "stats" %>
    <%= button_to "Log out", destroy_user_session_path, method: :delete, data: { turbo_frame: 'dashboard_main' } %>
  </section>
<% end %>