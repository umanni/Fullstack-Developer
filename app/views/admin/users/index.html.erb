<%= title t(:users, scope: 'menu') %>

<%= content_for :right do %>
  <%= link_to t(:create_resource, resource: t(:user, scope: 'activerecord.models')), new_admin_user_path %>
<% end %>

<div class="table-responsive">
  <table>
    <thead>
      <tr>
        <th><%= t(:id, scope: 'activerecord.attributes.user') %></th>
        <th><%= t(:full_name, scope: 'activerecord.attributes.user') %></th>
        <th><%= t(:email, scope: 'activerecord.attributes.user') %></th>
        <th><%= t(:role, scope: 'activerecord.attributes.user') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.full_name %></td>
          <td><%= user.email %></td>
          <td><%= t(user.role, scope: 'activerecord.attributes.user.roles') %></td>
          <td class="text-center">
            <%= link_to admin_user_path(user), class: 'btn btn-primary' do %>
              <i class="fas fa-eye"></i> <%= t(:show) %>
            <% end -%>
          </td>
          <td class="text-center">
            <%= link_to edit_admin_user_path(user), class: 'btn btn-primary' do %>
              <i class="fas fa-edit"></i> <%= t(:edit) %>
            <% end -%>
          </td>
          <td class="text-center">
            <%= link_to admin_user_path(user), method: :delete, data: { confirm: t(:are_you_sure) }, class: 'btn btn-danger' do %>
              <i class="fas fa-trash"></i> <%= t(:destroy) %>
            <% end -%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br/>

<%= will_paginate @users %>